<div id="dz-root"></div>

{% javascripts
        '@CogimixDeezerBundle/Resources/assets/js/plugin-deezer.js'
        filter="?yui_js"%}
<script src="{{ asset_url }}"></script>
{% endjavascripts %}
<script type="text/javascript">
var loggerDeezer = JSLog.Register('CogimixDeezer');

function loadDeezer(){
	var deezerloadedDeferred = $.Deferred();
	window.dzAsyncInit = function() {
		DZ.override_https();
	    DZ.init({
	    		appId  : '115311',
	    		channelUrl : '{{ url('_deezer_channel') }}',
	    		player : {
	    			onload : function(){
	    				loggerDeezer.debug('deezer player loaded');
	    				
	    				deezerloadedDeferred.resolve();
	    				}
	    		}
	    	});

	};

	
	var e = document.createElement('script');
    e.src = 'https://cdns-files.deezer.com/js/min/dz.js';
    e.async = true;
    document.getElementById('dz-root').appendChild(e);
    return deezerloadedDeferred.promise();
}

</script>